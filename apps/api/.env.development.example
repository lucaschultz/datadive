################################################################################
################                    GENERAL                     ################
################################################################################

# The app key is used to encrypt and decrypt data in the database.
APP_KEY=<APP_KEY>

# The app environment is used to determine the environment the app is running in.
NODE_ENV=development

# The port is used to run the app on a specific port.
PORT=3000

# The base URL is used to determine the base URL of the app.
BASE_URL=http://localhost:${PORT}

# The reference path is used to determine where the autogenerated api reference
# is available, e.g. http://localhost:41201/reference
REFERENCE_PATH=/reference



################################################################################
#################                   DATABASE                   #################
################################################################################

# The landlord database URL is used to connect to the landlord database.
LANDLORD_DATABASE_URL=<LANDLORD_DATABASE_URL>

# The landlord database auth token is used to authenticate with the landlord
# database.
LANDLORD_DATABASE_AUTH_TOKEN=<LANDLORD_DATABASE_AUTH_TOKEN>



################################################################################
#################                    TURSO                     #################
################################################################################

# The Turso organization is used to authenticate with the Turso API.
TURSO_ORG=<TURSO_ORG>

# The Turso API token is used to authenticate with the Turso API.
TURSO_API_TOKEN=<TURSO_API_TOKEN>



################################################################################
#################                    EMAIL                     #################
################################################################################

# The Resend API key is used to send emails.
RESEND_API_KEY=<RESEND_API_KEY>

# The email dummy is used to send emails to during development.
EMAIL_DUMMY=delivered@resend.dev

# The email from address is used as the from address in emails.
EMAIL_FROM=noreply@datadive.app

# The email verification URL is used to verify an email address, it is used in
# the email verification email.
EMAIL_VERIFICATION_URL=http://localhost:3000/landlord/verify-email

# The email reset password URL is used to reset a password, it is used in the
# reset password email.
EMAIL_RESET_PASSWORD_URL=http://localhost:3000/landlord/reset-password
